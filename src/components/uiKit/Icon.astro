---
import classNames from "classNames";

export interface Props {
    iconName: "play";
    className?: string;
    color?: "inherit" | "text-primary";
    fontSize?: string;
}

const {
    iconName,
    className,
    color = "inherit",
    fontSize = "24px",
} = Astro.props;

const attributes = {
    class: classNames(className, "icon", {
        ["color-text-primary"]: color === "text-primary",
    }),
    ...(fontSize !== undefined && {
        style: `font-size: ${fontSize}`,
    }),
};
---

<style lang="scss">
    @import "../../styles/variables";

    .icon {
        width: 1em;
        height: 1em;
        fill: currentColor;
        color: inherit;

        &.color-text-primary {
            color: $color-text-prime;
        }
    }
</style>

{
    iconName === "play" && (
        <svg {...attributes} width="24" height="24" viewBox="0 0 24 24">
            <path d="M7.98079 5.30869C6.71861 4.58469 5.69531 5.1778 5.69531 6.63238V17.3666C5.69531 18.8226 6.71861 19.415 7.98079 18.6917L17.363 13.311C18.6256 12.5867 18.6256 11.4133 17.363 10.6892L7.98079 5.30869Z" />
        </svg>
    )
}
