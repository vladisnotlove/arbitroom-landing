---
import classNames from "classNames";
import urlJoin from "url-join";
import LinearGradient, {
    Props as LinearGradientProps,
} from "./LinearGradient.astro";

export interface Props {
    iconName:
        | "play"
        | "star"
        | "star-half"
        | "star-empty"
        | "social-telegram"
        | "social-mail"
        | "social-youtube"
        | "burger";
    className?: string;
    color?: "inherit" | "text-primary" | "gradient-primary";
    fontSize?: string;
}

const {
    iconName,
    className,
    color = "inherit",
    fontSize = "24px",
} = Astro.props;

const svgAttrs = {
    class: classNames(className, "icon", {
        ["color-text-primary"]: color === "text-primary",
    }),
    ...(fontSize !== undefined && {
        style: `font-size: ${fontSize}`,
    }),
};

const gradientProps: LinearGradientProps = {
    id: "icon__gradient-primary__123",
    hidden: color !== "gradient-primary",
};
const pathAttrs = {
    ...(color === "gradient-primary" && {
        fill: `url(#${gradientProps.id})`,
    }),
};
---

<style lang="scss">
    @import "../../../styles/variables";

    .icon {
        width: 1em;
        height: 1em;
        fill: currentColor;
        color: inherit;

        &.color-text-primary {
            color: $color-text-prime;
        }
    }
</style>

