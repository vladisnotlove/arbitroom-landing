---
import classNames from "classNames";
export interface Props {
    size?: "medium" | "large";
    color?: "primary" | "primary-dim";
}

const { size = "medium", color } = Astro.props;
---

<button
    class={classNames("button", {
        ["large"]: size === "large",
        ["color-primary-dim"]: color === "primary-dim",
    })}
>
    <slot />
</button>

<style lang="scss">
    @import "../../styles/variables.scss";

    .button {
        // default medium
        display: flex;
        flex-flow: row nowrap;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;

        border: none;
        border-radius: 4rem;
        outline: 0;
        padding: 0.875rem 1.5rem;

        font-weight: 500;
        font-size: 1rem;
        line-height: 1.25;
        white-space: nowrap;

        color: $color-prime-contrast;
        background: $color-prime-main;

        cursor: pointer;
        box-shadow: 0 0 1.5em change-color($color-prime-dim, $alpha: 0.4);
        transition: all $animation-normal;

        .icon {
            margin-top: -50%;
            margin-bottom: -50%;
        }

        &:hover {
            text-decoration: none;
            box-shadow: 0 0 2.25em change-color($color-prime-dim, $alpha: 0.6);
        }

        &.large {
            font-size: 1.5rem;
            line-height: 1.5;
        }

        &.color-primary-dim {
            box-shadow: none;
            background: change-color($color-prime-dim, $alpha: 0.16);

            &:hover {
                box-shadow: none;
                background: change-color($color-prime-dim, $alpha: 0.24);
            }
        }
    }

    @media (max-width: $small-laptop) {
        .button {
            padding: 0.875rem 1.125rem;
            gap: 0.5rem;

            &.large {
                font-size: 1.25rem;
            }
        }
    }

    @media (max-width: $tablet) {
        .button {
            padding: 0.875rem;
            gap: 0.25rem;

            &.large {
                font-size: 1rem;
            }
        }
    }
</style>
