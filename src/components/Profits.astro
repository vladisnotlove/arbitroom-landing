---
import classNames from "classNames";
import { t } from "../utils/i18next/i18next";
import Container from "./uiKit/Container.astro";
import Paper from "./uiKit/Paper.astro";
import Text from "./uiKit/Text.astro";

export interface Props {
    className?: string;
}

const { className } = Astro.props;

const profitCards = [
    {
        iconSrc: "/layout-assets/images/card-icons/wallet.svg",
        title: t("@landing.@profits.availableSum"),
    },
    {
        iconSrc: "/layout-assets/images/card-icons/trend-up.svg",
        title: t("@landing.@profits.profitPerMonth"),
    },
    {
        iconSrc: "/layout-assets/images/card-icons/money-hand.svg",
        title: t("@landing.@profits.abilityToCashOut"),
    },
];
---

<Container className={classNames(className, "profits")}>
    <Text className="profits__title" variant={"h3"}>
        {t("@landing.@profits.title")}
    </Text>
    <div class="profits__cards">
        {
            profitCards.map((data) => (
                <Paper className="profit-card">
                    <div class="profit-card__icon-wrapper">
                        <img src={data.iconSrc} />
                    </div>
                    <Text className="profit-card__title" variant={"h5"}>
                        {data.title}
                    </Text>
                </Paper>
            ))
        }
    </div>
</Container>

<style lang="scss">
    @import "../styles/variables.scss";

    .profits {
        padding-top: 8rem;
        padding-bottom: 8rem;
    }
    .profits__title {
        text-align: center;
        margin-bottom: 4rem;
    }
    .profits__cards {
        display: flex;
        gap: 1rem;

        & > * {
            flex-grow: 1;
        }
    }
    .profit-card {
        padding: 2rem 1rem;
        border-radius: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }
    .profit-card__icon-wrapper {
        padding: 0.75rem;
        filter: drop-shadow(0px 0px 16px rgba(255, 35, 164, 0.64));
        border-radius: 16px;

        img {
            width: 3.5rem;
            height: 3.5rem;
        }
    }
    .profit-card__title {
        text-align: center;
        width: 70%;
    }
</style>
