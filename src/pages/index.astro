---
import { t } from "../utils/i18next";
import routes from "../store/routes";
import LandingLayout from "../layouts/LandingLayout.astro";
import Welcome from "../components/Welcome.astro";
import Profits from "../components/Profits.astro";
import AboutNeural from "../components/AboutNeural.astro";
import NeuralAdvantages from "../components/NeuralAdvantages.astro";
import Guide from "../components/Guide.astro";
import Reviews from "../components/Reviews.astro";
import FAQ from "../components/FAQ.astro";

const menuItems = [
    {
        id: "howCashGenerated",
        href: routes.index.pathWithFragment("howCashGenerated"),
        label: t("@landing.@menu.howCashGenerated"),
    },
    {
        id: "advantagesOfNeuralNetwork",
        href: routes.index.pathWithFragment("advantagesOfNeuralNetwork"),
        label: t("@landing.@menu.advantagesOfNeuralNetwork"),
    },
    {
        id: "whatFirst",
        href: routes.index.pathWithFragment("whatFirst"),
        label: t("@landing.@menu.whatFirst"),
    },
    {
        id: "clientsAboutUs",
        href: routes.index.pathWithFragment("clientsAboutUs"),
        label: t("@landing.@menu.clientsAboutUs"),
    },
];
---

<LandingLayout
    title="Arbitroom"
    menuItems={menuItems}
    menuActionButton={{
        href: "/login",
        label: t("@common.signup"),
    }}
>
    <Welcome slot="welcome" />
    <Profits />
    <AboutNeural />
    <NeuralAdvantages />
    <Guide />
    <Reviews />
    <FAQ />
</LandingLayout>
